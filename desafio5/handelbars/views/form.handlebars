{{#> body }}
  <h1>Crear Producto</h1>
  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}
  <form action="/productos" method="POST">
    <div class="mb-3">
      <label for="title" class="form-label">Nombre</label>
      <input
        type="text"
        id="title"
        name="title"
        class="form-control"
        value="{{title}}"
      />
      <label for="categoria" class="form-label">Categoria</label>
      <input
        type="text"
        id="categoria"
        name="categoria"
        class="form-control"
        value="{{categoria}}"
      />
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Precio</label>
      <input
        type="text"
        id="price"
        name="price"
        class="form-control"
        value="{{price}}"
      />
    </div>
    {{!-- <div class="mb-3">
      <label for="thumbnail" class="form-label">Foto</label>
      <input
        type="text"
        id="thumbnail"
        name="thumbnail"
        class="form-control"
        value="{{thumbnail}}"
      />
    </div> --}}
    <button class="btn btn-success">Crear Producto</button>
  </form>
{{/body}}