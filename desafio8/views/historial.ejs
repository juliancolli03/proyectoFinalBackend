<h2 style="color:crimson;">Historial</h2>

<% if(mensajes.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Nombre</th> <th>Categoria</th> <th>Precio</th> </tr>
            <% for (const producto of mensajes) {%>
            <tr>
                <td><%=producto.username%></td>
                <td><%=producto.text%></td>
                <td><%=producto.precio%></td>
            </tr>
            <%};%>
        </table>
    </div>
<% } else{ %>
    <h3 class="alert alert-danger">no se encontraron datos</h3>
<% } %>

<p id="messages"></p>